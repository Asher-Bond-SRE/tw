# Image with digest instead of tag
chelm test cg.json --chart=chart
cmp stdout expected.json

-- cg.json --
{
  "images": {
    "app": {
      "values": {
        "image": {
          "repository": "${registry_repo}",
          "digest": "${digest}"
        }
      }
    }
  },
  "test": {
    "cases": [
      {"name": "default", "images": ["app"]}
    ]
  }
}

-- chart/Chart.yaml --
apiVersion: v2
name: test-chart
version: 0.1.0

-- chart/templates/deployment.yaml --
apiVersion: apps/v1
kind: Deployment
metadata:
  name: test
spec:
  template:
    spec:
      containers:
        - name: app
          image: {{ .Values.image.repository }}@{{ .Values.image.digest }}

-- chart/values.yaml --
image:
  repository: nginx
  digest: sha256:0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

-- expected.json --
{
  "passed": true,
  "cases": [
    {
      "name": "default",
      "passed": true,
      "images": [
        "cgr.test/chainguard/test/app@sha256:a172cedcae47474b615c54d510a5d84a8dea3032e958587430b413538be3f333"
      ],
      "expected": [
        "app"
      ],
      "extractors": {
        "regex": [
          "cgr.test/chainguard/test/app@sha256:a172cedcae47474b615c54d510a5d84a8dea3032e958587430b413538be3f333"
        ],
        "structured": [
          "cgr.test/chainguard/test/app@sha256:a172cedcae47474b615c54d510a5d84a8dea3032e958587430b413538be3f333"
        ]
      }
    }
  ]
}
